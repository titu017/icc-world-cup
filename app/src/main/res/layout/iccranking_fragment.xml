<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Men's ODI Team Ranking"
            android:id="@+id/headlineTv"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/philosopher_bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:paddingTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Updated - 17 April, 2019"
            android:layout_marginBottom="15dp"
            android:id="@+id/lastUpdateTv"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/philosopher_regular"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="11.5">

            <TextView
                android:id="@+id/one_positionTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.8"
                android:fontFamily="@font/philosopher_bold"
                android:gravity="center"
                android:text="Position"
                android:textColor="@color/white"
                android:paddingRight="-13dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"/>

            <ImageView
                android:id="@+id/two_flagTv"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:gravity="center" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"/>

            <TextView
                android:id="@+id/three_TeamTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:fontFamily="@font/philosopher_bold"
                android:gravity="center"
                android:text="Team"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/four_WeightedMatchesTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.4"
                android:fontFamily="@font/philosopher_bold"
                android:gravity="center"
                android:text="W M*"
                android:textColor="@color/white"
                android:paddingLeft="-7dp"/>

            <TextView
                android:id="@+id/five_PointsTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.8"
                android:fontFamily="@font/philosopher_bold"
                android:gravity="center"
                android:text="Points"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/six_Rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.8"
                android:fontFamily="@font/philosopher_bold"
                android:gravity="center"
                android:text="Rating"
                android:textColor="@color/white" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rankingRecyclerViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            ></android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W M*= Weighted Matches"
            android:layout_marginBottom="15dp"
            android:id="@+id/weightedMatchId"
            android:fontFamily="@font/philosopher_regular"
            android:textSize="12sp"
            android:textColor="@color/white"/>


    </LinearLayout>

    </ScrollView>


</LinearLayout>